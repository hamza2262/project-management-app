<section>
  <div class="container">
    <div class="row">
      <div class="col-5">
        <h1>Add Project</h1>
        <%= form_for @project, url:projects_path(@project), method: :post do |f|%>
          <div class="form-group mt-3">
            <%= f.label :title %>
            <%= f.text_field :title, autofocus: true, autocomplete: 'title', class: 'form-control' %>
          </div>
          <div class="form-group mt-3">
            <%= f.label :description %>
            <%= f.text_field :description, autofocus: true, autocomplete: 'description', class: 'form-control' %>
          </div>
          <%= f.submit%>
        <% end %>
      </div>
    </div>
  </div>
</section>
