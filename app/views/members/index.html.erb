<%= render 'layouts/error-messages' %>
<section>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1>My Team Members</h1>
        <table class="table table-borderless table-hover">
          <thead>
          <tr>
            <th scope="col">Member Names</th>
            <th scope="col">Created At</th>
            <th colspan="3", class="text-center">Action</th>
          </tr>
          </thead>
          <tbody>
          <% @member.each do |member| %>
            <tr>
              <td><%= member.member_name %></td>
              <td><%= member.created_at.strftime("%d-%Y-%m") %></td>
              <td><%= button_to 'Edit', edit_team_member_path(@team, member), method: :get, class:"create-team-button"%></td>
              <td><%= button_to 'Delete', team_member_path(@team, member), method: :delete, class:"create-team-button"%></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

